<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize28</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize28</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tableTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_content_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/title_background</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="contentTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_content_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize22</item>
        <item name="android:background">@drawable/task_item_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MenuTextItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_menu_paddingleft</item>
        <item name="android:paddingTop">@dimen/activity_menu_padding</item>
        <item name="android:paddingBottom">@dimen/activity_menu_padding</item>
        <item name="android:textSize">@dimen/textsize28</item>
        <item name="android:background">@drawable/menu_item_bg</item>
        <item name="android:textColor">@color/radio_item_select</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="title_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize28</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="setting_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize28</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="spPuStytle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="MenuTextItemStyle1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/menu_item_bg1</item>
        <item name="android:textColor">@color/radio_item_select1</item>
    </style>

    <style name="MenuTextItemStyle2">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/menu_item_bg2</item>
        <item name="android:textColor">@color/radio_item_select1</item>
    </style>


    <style name="btn_input_amount_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsize38</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/btn_number_bg</item>
    </style>

    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="AppTheme.Dialog_Fullscreen" parent="Animation.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppTheme.color_TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize18</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 处理切换语言时的白屏 -->
    <style name="AppTheme_switchLanguage" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:animationDuration">0</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


</resources>
