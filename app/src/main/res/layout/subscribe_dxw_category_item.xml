<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/dxw"
        android:layout_width="@dimen/box_dxw_item_width"
        android:layout_height="@dimen/box_item_height"
        android:layout_centerInParent="true"
        android:background="@drawable/shapee_dxw"
        android:gravity="center"
        android:minHeight="@dimen/box_item_width"
        android:minWidth="@dimen/box_item_height"
        android:text="@string/dxw_name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/textsize18"/>

    <RelativeLayout
        android:id="@+id/rl_subscribe"
        android:layout_width="@dimen/box_item_width"
        android:layout_height="@dimen/box_item_height"
        android:background="@drawable/shapee_dxw"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/text_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="1235555dddd"
            android:textColor="@color/subscribe_item_text_color"
            android:textSize="@dimen/textsize17"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_item"
            android:gravity="left"
            android:maxLines="3"
            android:text="@string/dxw_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textsize17"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>