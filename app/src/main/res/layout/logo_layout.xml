<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <RelativeLayout
        android:id="@+id/email_login_form"
        android:layout_width="@dimen/login_width"
        android:layout_height="300dp"
        android:visibility="gone"
        android:background="@drawable/login_item_bg"
        >
        <com.smtlibrary.views.EditTextWithDel
            android:layout_width="300dp"
            android:layout_height="@dimen/edit_height"
            android:inputType="text"
            android:hint="@string/please_enter_activation_code"
            android:background="@drawable/edittext_input_bg"
            android:id="@+id/editText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:text="@string/activate_terminal_device"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/title_jh_bg"
            android:id="@+id/textView3" />

        <Button
            android:text="立即激活"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:background="@drawable/btn_jh_bg"
            android:textColor="@android:color/holo_red_light"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/button"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>