<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.smtlibrary.irecyclerview.IRecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadMore_enabled="false"
        app:recyview_manager="LinearLayoutManager"
        app:swipe_size="LARGER"
        app:swipe_enabled="false"
        android:layout_above="@id/bottom_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btFallBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_weight="1"
            android:background="@drawable/btn_login_bg"
            android:text="@string/fall_box"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_textsize"/>

        <Button
            android:id="@+id/btCancelBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_login_bg"
            android:text="@string/cancel_box"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:textSize="@dimen/login_textsize"/>

        <Button
            android:id="@+id/btRefresh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_login_bg"
            android:text="@string/refresh"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_textsize"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_login_bg"
            android:text="@string/confim"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_textsize"/>

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_cancle_bg"
            android:text="@string/cancle"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_textsize"/>


    </LinearLayout>
</RelativeLayout>